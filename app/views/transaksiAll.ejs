<h1 class="font-bold text-3xl pt-28 text-[#001939] text-center mb-7">Daftar Transaksi</h1>
<% transaksis.forEach(transaksi => { %>
<div
    class="container bg-slate-100 rounded-xl flex mx-auto px-10 border py-10 mb-5 w-[800px] shadow"
>
    <div>
        <img src="data:image/jpeg;base64,<%= transaksi.poster %>" class="w-[200px]" />
    </div>
    <div class="ps-7 w-full">
        <div class="flex justify-between">
            <h1 class="font-bold">ID Transaksi:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.id %></span>
        </div>
        <div class="flex justify-between">
            <h1 class="font-bold">User:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.id_user %></span>
        </div>
        <div class="flex justify-between">
            <h1 class="font-bold">Event:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.id_event %></span>
        </div>
        <div class="flex justify-between">
            <h1 class="font-bold">Jumlah:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.jumlah %></span>
        </div>
        <div class="flex justify-between">
            <h1 class="font-bold">Total:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.total %></span>
        </div>
        <div class="flex justify-between">
            <h1 class="font-bold">Pembayaran:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.pembayaran %></span>
        </div>

        <% if (transaksi.status !== 'lunas') { %>
        <div class="flex justify-between mb-5">
            <h1 class="font-bold">Status:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.status %></span>
        </div>
        <form action="/transaksiAll?_method=PUT" method="POST">
            <input type="hidden" name="id" value="<%= transaksi.id %>" />
            <button
                type="submit"
                class="text-[#ffde6d] bg-[#001939] rounded-full mx-auto px-7 py-1 mt-5 font-bold"
            >
                Selesai
            </button>
        </form>

        <% } else { %>
        <div class="flex justify-between mb-5">
            <h1 class="font-bold">Status:</h1>
            <span class="font-semibold text-slate-500"><%= transaksi.status %></span>
        </div>
        <% } %>
    </div>
</div>
<% }) %>
